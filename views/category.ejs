<!DOCTYPE html>
<html lang="<%- page.language %>">
<head>

    <%- include includes/head.ejs %>

</head>
<body class="catalog">

<%- include includes/header.ejs %>

<div class="page-wrapper">
    <div class="content-main">

        <% if (typeof page.adv === 'object' && page.adv.top) { %>
        <div style="margin: 10px; text-align: center;">
            <%- page.adv.top %>
        </div>
        <% } %>

        <section class="top-wrapper light">
            <ul class="breadcrumbs">
                <li><a href="/">Главная</a></li>
                <li><%= page.title %></li>
            </ul>
            <h1><%= page.title %></h1>
        </section>

        <div class="content-body">

            <% if (typeof top === 'object' && top.length && typeof content !== 'object') { %>

            <div class="promo compact">
                <div class="promo-content">
                    <div class="control-category">
                        <span class="control prev"></span>
                        <span class="control next"></span>
                    </div>
                </div>
            </div>
            <div class="carousel-category">

                <% top.forEach(function (movie) { %>

                <div class="promo compact">
                    <div class="promo-content">
                        <ul>
                            <li class="active" style="background: url('<%- movie.picture_big %>') center center no-repeat; background-size: cover;">
                                <div class="button-wrapper">
                                    <a href="<%- movie.url %>" class="large cinemapress-button js-promo-watch-link">Смотреть онлайн</a>
                                    <a href="<%- movie.url %>/<%- page.urls.movies.trailer %>" class="large cinemapress-button dim js-promo-trailer-link">Смотреть трейлер</a>
                                    <a href="<%- movie.url %>/<%- page.urls.movies.download %>" class="action-link bright large js-favourite-button">Скачать фильм</a>
                                </div>
                                <% if (movie.year) { %>
                                <span class="age-limit" data-value="<%- movie.year %>"></span>
                                <% } %>
                            </li>
                        </ul>
                    </div>
                </div>

                <% }); %>

            </div>

            <% } %>

            <% if (typeof content === 'object') { %>
            <div class="text-block-wrapper">
                <div class="js-expand-block">
                    <div class="expandable-content">
                        <div class="cinemapress-content">
                            <% if (content.image) { %>
                            <img src="<%- content.image %>" class="cinemapress-content-image">
                            <% } %>
                            <% if (content.description) { %>
                            <div class="cinemapress-content-description">
                                <%- content.description %>
                            </div>
                            <% } %>
                            <div class="cinemapress-content-publish">
                                <% if (content.tags) { %>
                                <span class="cinemapress-content-publish-tags"><img src="data:image/svg+xml;utf8;base64," style="width: 10px;"> <%- content.tags %></span>
                                <% } %>
                                <% if (content.tags) { %>
                                <span class="cinemapress-content-publish-publish"><img src="data:image/svg+xml;utf8;base64," style="width: 10px;"> <%- content.publish %></span>
                                <% } %>
                            </div>
                        </div>
                        <div style="clear: both;"></div>
                    </div>
                </div>
            </div>
            <% } %>

            <div class="catalog-content js-catalog">
                <div class="catalog-content-inner">
                    <% if (typeof page.sorting === 'object') { %>
                    <div class="filters-extra-wrapper">
                        <div class="filters-extra no-mobile">
                            <ul class="types js-catalog-filter-paidtypes">
                                <% page.sorting.forEach(function (sort) { %>
                                <% if (sort.active) { %>
                                <li style="background: #ccc"><a href="<%- sort.url %>"><%- sort.name %></a></li>
                                <% } else { %>
                                <li><a href="<%- sort.url %>"><%- sort.name %></a></li>
                                <% } %>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                    <% } %>

                    <% if (typeof movies === 'object' && movies.length) { %>

                    <section class="posters-block js-catalog-list">
                        <div class="gallery-wrapper">
                            <ul class="gallery posters-small mobile-has-titles js-criteo-gallery">

                                <% movies.forEach(function (movie) { %>

                                <li>
                                    <a href="<%- movie.url %>" class="item-content-wrapper js-collection-content">
                                        <span class="image" data-caption="Смотреть онлайн">
                                            <img src="<%- movie.poster %>">
                                            <% if (movie.year) { %>
                                            <span class="age-limit" data-value="<%- movie.year %>"></span>
                                            <% } %>
                                        </span>
                                        <span class="title"><span><%- movie.title %></span></span>
                                    </a>
                                </li>

                                <% }); %>

                            </ul>
                        </div>
                    </section>

                    <% } %>

                </div>
            </div>

            <% if (typeof page.pagination === 'object') { %>

            <ul class="inner-nav pager">
                <% if (page.pagination.prev.length) { %>
                <% page.pagination.prev.forEach(function (prev) { %>
                <li class="js-page">
                <a href="<%- prev.link %>" rel="nofollow"><%- prev.number %></a>
                </li>
                <% }); %>
                <li class="js-no-url-page"><span>…</span></li>
                <% } %>
                <li class="js-page active">
                    <a href="javascript:void(0)"><%- page.pagination.current %></a>
                </li>
                <% if (page.pagination.next.length) { %>
                <li class="js-no-url-page"><span>…</span></li>
                <% page.pagination.next.forEach(function (next) { %>
                <li class="js-page">
                <a href="<%- next.link %>" rel="nofollow"><%- next.number %></a>
                </li>
                <% }); %>
                <% } %>
            </ul>

            <% } %>

            <% if (typeof content === 'object' && page.comments) { %>
            <div style="padding: 10px;">
                <%- page.comments %>
            </div>
            <% } %>

            <% if (page.seo) { %>
            <div class="text-block-wrapper">
                <div class="js-expand-block">
                    <div class="expandable-content">
                        <%- page.seo %>
                    </div>
                </div>
            </div>
            <% } %>

        </div>
    </div>
</div>

<% include includes/footer.ejs %>

</body>
</html>